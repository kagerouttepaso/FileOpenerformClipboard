<Window
    x:Class="FileOpenerFromClipboardGui.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FileOpenerFromClipboardGui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="200"
    Height="130"
    d:DataContext="{d:DesignInstance d:Type=local:MainWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    ContentRendered="Window_ContentRenderedAsync"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.RowSpan="1"
            HorizontalAlignment="Center"
            Text="Valid Path Searching." />
        <ProgressBar
            Grid.Row="1"
            Grid.RowSpan="1"
            Height="30"
            Value="{Binding Progress, Mode=OneWay}" />
        <Button
            Grid.Row="2"
            Grid.RowSpan="1"
            Click="Button_Click"
            Content="Cancel" />
    </Grid>
</Window>